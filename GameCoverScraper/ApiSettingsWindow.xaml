<controls:MetroWindow x:Class="GameCoverScraper.ApiSettingsWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      Title="API Settings" Height="400" Width="600"
                      WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <!-- Adjusted row definitions -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Original Title Text -->
        <TextBlock Grid.Row="0" Text="Configure your API keys for image search services"
                   Margin="0,0,0,5" TextWrapping="Wrap"/>

        <!-- New, More Detailed Header with Link -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock TextWrapping="Wrap" Margin="0,0,0,5">
                <Run>You need an API key for each service you want to use. Sign up on their websites to get your keys.</Run>
            </TextBlock>
        </StackPanel>

        <ScrollViewer Grid.Row="2"> <!-- ScrollViewer now in Row 2 -->
            <StackPanel>

                <!-- Google API -->
                <GroupBox Header="Google Custom Search API" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBox x:Name="TxtGoogleKey"
                                 controls:TextBoxHelper.Watermark="Enter your Google API key"
                                 ToolTip="Your unique key for accessing the Google Custom Search API."
                                 Margin="0,5"/>
                        <TextBlock Margin="0,5,0,0">
                            <Hyperlink NavigateUri="https://developers.google.com/custom-search/v1/overview" RequestNavigate="Hyperlink_RequestNavigate">
                                Get Google API Key
                            </Hyperlink>
                        </TextBlock>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0"> <!-- Buttons in Row 3 -->
            <Button x:Name="BtnSave" Content="Save" Width="100" Margin="0,0,10,0" Click="BtnSave_Click"/>
            <Button x:Name="BtnCancel" Content="Cancel" Width="100" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</controls:MetroWindow>
